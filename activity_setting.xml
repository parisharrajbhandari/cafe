<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#0E6159">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:src="@drawable/baseline_account_circle_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parishar Rajbhandari"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@android:color/white"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txt_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="30dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/editicon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/baseline_circle_24"
                    android:scaleType="center"
                    android:src="@drawable/baseline_edit_24" />

                <TextView
                    android:id="@+id/txt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/editicon"
                    android:text="Edit Profile"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_edit"
                    android:src="@drawable/baseline_navigate_next_24" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_below="@+id/editicon"
                    android:layout_margin="20dp"/>

                <ImageView
                    android:id="@+id/bankicon"
                    android:layout_below="@+id/view1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/baseline_circle_24"
                    android:scaleType="center"
                    android:src="@drawable/baseline_assured_workload_24" />

                <TextView
                    android:id="@+id/txt_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/view1"
                    android:layout_toRightOf="@+id/bankicon"
                    android:text="Bank Information"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_edit"
                    android:layout_below="@+id/view1"
                    android:src="@drawable/baseline_navigate_next_24" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_below="@+id/bankicon"
                    android:layout_margin="20dp"/>

                <ImageView
                    android:id="@+id/notificationicon"
                    android:layout_below="@+id/view2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/baseline_circle_24"
                    android:scaleType="center"
                    android:src="@drawable/outline_notifications_24" />

                <TextView
                    android:id="@+id/txt_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/view2"
                    android:layout_toRightOf="@+id/bankicon"
                    android:text="Notification"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_edit"
                    android:layout_below="@+id/view2"
                    android:src="@drawable/baseline_navigate_next_24" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_below="@+id/notificationicon"
                    android:layout_margin="20dp"/>

                <ImageView
                    android:id="@+id/passwordicon"
                    android:layout_below="@+id/view3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/baseline_circle_24"
                    android:scaleType="center"
                    android:src="@drawable/baseline_lock_outline_24" />

                <TextView
                    android:id="@+id/txt_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/view3"
                    android:layout_toRightOf="@+id/bankicon"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_edit"
                    android:layout_below="@+id/view3"
                    android:src="@drawable/baseline_navigate_next_24" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_below="@+id/passwordicon"
                    android:layout_margin="20dp"/>

                <ImageView
                    android:id="@+id/privacyicon"
                    android:layout_below="@+id/view4"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/baseline_circle_24"
                    android:scaleType="center"
                    android:src="@drawable/baseline_privacy_tip_24" />

                <TextView
                    android:id="@+id/txtprivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/view4"
                    android:layout_toRightOf="@+id/bankicon"
                    android:text="Privacy Policy"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_edit"
                    android:layout_below="@+id/view4"
                    android:src="@drawable/baseline_navigate_next_24" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_below="@+id/privacyicon"
                    android:layout_margin="20dp"/>

                <ImageView
                    android:id="@+id/logouticon"
                    android:layout_below="@+id/view5"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/baseline_circle_24"
                    android:scaleType="center"
                    android:src="@drawable/baseline_logout_24" />

                <TextView
                    android:id="@+id/txt_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/view5"
                    android:layout_toRightOf="@+id/bankicon"
                    android:text="Log Out"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_edit"
                    android:layout_below="@+id/view5"
                    android:src="@drawable/baseline_navigate_next_24" />


            </RelativeLayout>


        </LinearLayout>

        
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>